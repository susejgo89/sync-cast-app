{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "/@(dashboard|media|playlists|music-playlists|screens|groups|admin){,/**}",
        "destination": "/app.html"
      },
      {
        "source": "**",
        "destination": "/landing/index.html"
      }
    ]
  }
}
